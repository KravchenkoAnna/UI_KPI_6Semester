<!--
    Task 3-->
     <Window.Resources>
        <LinearGradientBrush x:Key="LinearPanelBrush">
            <GradientStop Color="Yellow" Offset="0"></GradientStop>
            <GradientStop Color="Aqua" Offset="0.5"></GradientStop>
            <GradientStop Color="Yellow" Offset="0.8"></GradientStop>
        </LinearGradientBrush>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderBrush" Value="White"></Setter>
        </Style>

    </Window.Resources> 
 <!-- Task 2 -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10" Background="{StaticResource LinearPanelBrush}">
            <StackPanel Orientation="Horizontal" Grid.Row="0" FocusManager.IsFocusScope="True" >
                <Button ToolTip="Open" Width="100" Command="Open" >
                <Image Source="images\open.jpeg"/>
            </Button>
            <Button ToolTip="Copy" Width="80" Command="Copy" CommandTarget="{Binding ElementName=inputTextBox}">
                <Image Source="images\copy.png"/>
            </Button>
            <Button ToolTip="Paste" Width="100" Command="Paste" CommandTarget="{Binding ElementName=inputTextBox}">
                <Image Source="images\paste.png"/>
            </Button>
            <Button ToolTip="Delete" Width="100" Command="Delete">
                <Image Source="images\delete.png"/>
            </Button>
        </StackPanel>
        </Border>

        <Border Grid.Row="1" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10" Background="{StaticResource LinearPanelBrush}">
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBox x:Name="inputTextBox" Margin="10,10,10,10" TextWrapping="Wrap"  HorizontalScrollBarVisibility="Visible" FontSize="{Binding ElementName=fontSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" Text="Text"/>
                <DockPanel Grid.Row="1">
                    <Label>Font Size</Label>
                    <Slider Margin="4" MinWidth="100" Name="fontSlider" Maximum="100" Minimum="12" Value="10"></Slider>
                    <Button ToolTip="Зберегти" Command="Save" Style="{x:Null}" DockPanel.Dock="Bottom" Width="100" Margin="10,10,10,10">OK</Button>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
    
</Window>
